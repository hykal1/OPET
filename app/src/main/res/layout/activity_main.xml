<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    android:background="@color/light_cream"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:background="@color/light_cream"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:background="@drawable/radius_bawah">

            <ImageView
                android:id="@+id/gambar_kucing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/kucingbeneran"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="51dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="50% Off for groming"
                android:textSize="28sp"
                android:textStyle="bold"
                android:layout_marginTop="51dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1 Nov - 28 Nov 2023"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_marginTop="91dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="34dp"
                android:text="Order Now"
                android:layout_marginTop="125dp"
                android:textSize="12sp"
                android:padding="10dp"
                android:background="@drawable/bg_button_kecil"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="340dp"
            android:layout_height="400dp"
            android:layout_gravity="center"
            android:layout_marginTop="-45dp"
            android:padding="20dp"
            android:elevation="5dp"
            android:background="@drawable/bg_menu_varian">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hello, Hykal"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                />

            <ImageButton
                android:layout_marginTop="48dp"
                android:id="@+id/button_veterinary_menu"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:background="@drawable/veterinary"
                />

            <ImageButton
                android:layout_marginTop="48dp"
                android:layout_marginLeft="170dp"
                android:id="@+id/button_grooming_menu"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:background="@drawable/grooming"
                />

            <ImageButton
                android:layout_marginTop="220dp"
                android:id="@+id/button_food_menu"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:background="@drawable/foods"
                />

            <ImageButton
                android:layout_marginTop="220dp"
                android:layout_marginLeft="170dp"
                android:id="@+id/button_food_accessories"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:background="@drawable/accessories"
                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="24dp"
            android:layout_width="340dp"
            android:layout_height="301dp"
            android:layout_gravity="center"
            android:padding="20dp"
            android:elevation="5dp"
            android:background="@drawable/bg_menu_varian"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Grooming"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/see_more"
                />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/dokter1"
                    tools:ignore="MissingConstraints" />

                <TextView
                    android:id="@+id/drhFakhri"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Drh. Fakhri Ichsan"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.189"
                    app:layout_constraintStart_toEndOf="@+id/imageView"
                    tools:ignore="MissingConstraints"
                    tools:layout_editor_absoluteY="0dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Spesialis mulut hewan"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.162"
                    app:layout_constraintStart_toEndOf="@+id/imageView"
                    app:layout_constraintTop_toBottomOf="@+id/drhFakhri"
                    tools:ignore="MissingConstraints" />



            </androidx.constraintlayout.widget.ConstraintLayout>

        </RelativeLayout>

    </LinearLayout>

</ScrollView>