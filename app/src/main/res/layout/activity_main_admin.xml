<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@color/light_cream"
    tools:context=".MainAdmin">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:background="@color/light_cream"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="158dp"
            android:background="@drawable/radius_bawah">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Opet For Employee"
                android:textSize="28sp"
                android:textStyle="bold"
                android:layout_marginTop="51dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="20dp"
                />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="340dp"
            android:layout_height="210dp"
            android:layout_gravity="center"
            android:layout_marginTop="-45dp"
            android:padding="20dp"
            android:elevation="5dp"
            android:background="@drawable/bg_menu_varian">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/username"
                android:text="Hello, Hykal"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                />

            <ImageButton
                android:contentDescription="Sales Report"
                android:layout_marginTop="48dp"
                android:id="@+id/button_veterinary_menu"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:background="@drawable/sales_report"
                />

            <ImageButton
                android:contentDescription="Incoming order"
                android:layout_marginTop="48dp"
                android:layout_marginLeft="170dp"
                android:id="@+id/button_grooming_menu"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:background="@drawable/incoming_order"
                />

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>