<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#F38D3D"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".login.login">

    <TextView
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="OPET"
        android:textSize="96sp"
        android:textAlignment="center"
        android:textStyle="bold"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_marginTop="0dp"
            android:layout_marginBottom="80dp"
            android:layout_width="294.01dp"
            android:scaleType="fitXY"
            android:layout_height="375dp"
            android:layout_gravity="center"
            android:src="@drawable/opet" />

        <ImageView
            android:layout_marginTop="160dp"
            android:layout_gravity="center"
            android:scaleType="fitXY"
            android:layout_width="430dp"
            android:layout_height="wrap_content"
            android:src="@drawable/circleCreame"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_marginTop="40dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="40sp"
            android:layout_gravity="center_vertical"
            android:text="Take Care Of\n Your Pet"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="#A4A5AD"
            android:text="Make you bonding relationship\n between Pets and Human"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="125dp"/>
        
        <LinearLayout
            android:layout_marginTop="200dp"
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="#FEEBDC"
                android:contentDescription="Get Started"
                android:layout_height="wrap_content"
                android:src="@drawable/buttonSplash"/>

            <TextView
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:textSize="15sp"
                android:layout_height="wrap_content"
                android:text="━ Sign in ━"/>


        </LinearLayout>



    </FrameLayout>


</LinearLayout>